{
  "name": "hcmus-toolkit",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.15.0",
  "author": "yuran1811",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prepare": "husky",
    "bundle": "nx run-many -t bundle",
    "build": "nx run-many -t build",
    "start": "nx run-many -t start",
    "serve": "nx run-many -t serve",
    "typecheck": "nx run-many -t typecheck",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint --cache",
    "lint:fix": "nx run-many -t lint --cache --fix",
    "format": "prettier --write .",
    "common": "pnpm --filter @hcmus-toolkit/common",
    "core": "pnpm --filter @hcmus-toolkit/core",
    "moodify": "pnpm --filter @hcmus-toolkit/moodify",
    "ext": "pnpm --filter @hcmus-toolkit/extension"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@changesets/cli": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@eslint/js": "catalog:",
    "@html-eslint/eslint-plugin": "catalog:",
    "@html-eslint/parser": "catalog:",
    "@nx/eslint": "catalog:",
    "@nx/vite": "catalog:",
    "@prettier/plugin-xml": "catalog:",
    "@types/node": "catalog:",
    "cz-git": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-format": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "nx": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "resolutions": {
    "cookie": "0.7.2"
  },
  "lint-staged": {
    "**/*": [
      "eslint --cache --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "volta": {
    "node": "22.17.0"
  }
}
